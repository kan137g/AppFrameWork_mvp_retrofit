    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/activity_base_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_88"
        android:layout_alignParentTop="true"
