<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_88"
    android:background="@color/themeColor"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/titlebar_back_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingLeft="13dip"
        android:paddingRight="5dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/titlebar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="left|center_vertical"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/px_text_18" />

    <RelativeLayout
        android:id="@+id/titlebar_right_rl"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dip"
        android:paddingRight="13dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/titlebar_right_view"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <TextView
            android:id="@+id/titlebar_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>
